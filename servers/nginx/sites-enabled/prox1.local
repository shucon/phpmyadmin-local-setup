server {
	listen	   443 ssl http2;
	listen	   80;
	access_log /var/log/nginx/access_localhost.proxy1.local.log;
	error_log /var/log/nginx/error_localhost.proxy1.local.log error;

	server_name proxy1.local;
    large_client_header_buffers 4 32k;

    location / {
        proxy_set_header Host proxy2.local;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://proxy2.local:80;
        proxy_set_header Forwarded "$proxy_add_forwarded;proto=$scheme";
    }
}